    <script src="~/Scripts/jquery.wmuSlider.js"></script>
    <script>
        //https://youtu.be/XHfOyhkdlgc carousel
        (function () {
            var balls = document.querySelector('.balls')
            var quant = document.querySelectorAll('.slides .image')
            var atual = 0
            var imagem = document.getElementById('atual')
            var next = document.getElementById('next')
            var voltar = document.getElementById('voltar')
            var rolar = true
            for (let i = 0; i < quant.length; i++) {
                var div = document.createElement('div')
                div.id = i
                balls.appendChild(div)
            }

            document.getElementById('0').classList.add('imgAtual')



            var pos = document.querySelectorAll('.balls div')

            for (let i = 0; i < pos.length; i++) {
                pos[i].addEventListener('click', () => {
                    atual = pos[i].id
                    rolar = false
                    slide()
                })
            }

            voltar.addEventListener('click', () => {
                atual--
                rolar = false
                slide()
            })
            next.addEventListener('click', () => {
                atual++
                rolar = false
                slide()
            })

            function slide() {
                if (atual >= quant.length) {
                    atual = 0
                }
                else if (atual < 0) {
                    atual = quant.length - 1
                }

                document.querySelector('.imgAtual').classList.remove('imgAtual')
                imagem.style.marginLeft = -1140 * atual + 'px'
                document.getElementById(atual).classList.add('imgAtual')
            }
            setInterval(() => {
                if (rolar) {
                    atual++
                    slide()
                }
                else {
                    rolar = true
                }
            }, 8000)
        }());
    </script>

    <script>
        //https://youtu.be/e3NhP1nt-lY animar ao scroll

        debounce = function (func, wait, immediate) { //  reduz a quantidade de execução desnecessárias
            var timeout;
            return function () {
                var context = this, args = arguments;
                var later = function () {
                    timeout = null;
                    if (!immediate) func.apply(context, args);
                };
                var callNow = immediate && !timeout;
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
                if (callNow) func.apply(context, args);
            };
        };

        (function () {//função de encapsulamento de variaveis
            var $target = $('.anime'), //class que está no html como referência
                animationClass = 'animation-block3 element-top-bottom-lento'; // class que deseja add quando o scroll for girado
            scroll($target, animationClass);

            var $target = $('.anime2'),
                animationClass = 'animation-block3 element-top-bottom';
            scroll($target, animationClass);

            var $target = $('.anime3'),
                animationClass = 'animation-block2 element-right-centro';
            scroll($target, animationClass);

            var $target = $('.anime4'),
                animationClass = 'animation-block element-left-centro';
            scroll($target, animationClass);

            var $target = $('.animation-group14'),
                animationClass = 'animate__animated animate__flip';
            scroll($target, animationClass);

            var $target = $('.animation-group15'),
                animationClass = 'animate__animated animate__tada';
            scroll($target, animationClass);


        }());//chama a própria função

        /** para se lembrar de qual é qual
             anime" style="opacity: 0"
            animation-block3 element-top-bottom-lento

            anime2" style="opacity: 0"
            animation-block3 element-top-bottom


            anime3" style="opacity: 0"
            animation-block2 element-right-centro

            anime4" style="opacity: 0"
            animation-block element-left-centro
         */

        function scroll($target, animationClass) {
            offset = $(window).height() * 3 / 4;//calcula a distância do scroll na tela
            animeScoll($target, animationClass, offset);

            $(document).scroll(debounce(function () { //ativa a função quando o scroll e ativo (o debounce e outro função que reduz a quantidade de execução desnecessárias)
                animeScoll($target, animationClass, offset);
                //console.log('test')
            }, 200));
        }

        function animeScoll($target, animationClass, offset) {
            var documentTop = $(document).scrollTop();

            $target.each(function () {
                var itemTop = $(this).offset().top;
                if (documentTop > itemTop - offset) {
                    $(this).addClass(animationClass);
                } else {
                    $(this).removeClass(animationClass);
                }
            })
        }

    </script>

