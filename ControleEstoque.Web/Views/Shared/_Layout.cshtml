<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Controle de Estoque</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/sweetalert2.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="container">

            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Controle de Estoque", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@               
            </div>
            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                <ul class="nav navbar-nav">
                    
                    <li>
                        <a href="/Home" style="padding: 0px">
                            <img src="~/Content/Logo/logo1.jpeg" alt="" style="height: 50px; width:auto; padding:5px; padding-right: 75px;" />
                        </a>
                    </li>

                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Cadastro
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Grupo de produtos", "Index", "CadGrupoProduto")</li>
                            <li>@Html.ActionLink("Marcas de produtos", "Index", "CadMarcaProduto")</li>
                            <li>@Html.ActionLink("Locais de armazenamento", "Index", "CadLocalArmazenamento")</li>
                            <li>@Html.ActionLink("Unidades de medias", "Index", "CadUnidadeMedida")</li>
                            <li>@Html.ActionLink("Produtos", "Index", "CadProduto")</li>
                            <li class="nav-divider"></li>
                            <li>@Html.ActionLink("Países", "Index", "CadPais")</li>
                            <li>@Html.ActionLink("Estados", "Index", "CadEstado")</li>
                            <li>@Html.ActionLink("Cidade", "Index", "CadCidade")</li>
                            <li>@Html.ActionLink("Fornecedores", "Index", "CadFornecedor")</li>
                            <li class="nav-divider"></li>
                            <li>@Html.ActionLink("Perfis de Usuários", "Index", "CadPerfil")</li>
                            <li>@Html.ActionLink("Usuários", "Index", "CadUsuario")</li>
                            <li>@Html.ActionLink("HotSite", "Index", "HotSite")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Operações
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Entreda de produtos", "Index", "OperEntradaProduto")</li>
                            <li>@Html.ActionLink("Saída de produtos", "Index", "OperSaidaProduto")</li>
                            <li>@Html.ActionLink("Lançamento de perdas de produtos", "LancPerdaProduto", "Operacao")</li>
                            <li>@Html.ActionLink("Inventário de estoque", "Inventario", "Operacao")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Relatorios
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Possição do Estoque", "PosicaoEstoque", "Relatorio")</li>
                            <li>@Html.ActionLink("Ressuprimento", "Ressuprimento", "Relatorio")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Gráficos
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Perdas por mês", "PerdaMes", "Grafico")</li>
                            <li>@Html.ActionLink("Entradas vs saídas por mês", "EntradaSaidaMesa", "Grafico")</li>
                        </ul>
                    </li>
                </ul>
                    using (Html.BeginForm("LogOff", "Conta", FormMethod.Post, new { id = "logoffForm" }))
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Sobre", "Sobre", "Home")</li>
                            @*<li><a href="#">Olá @User.Identity.Name</a></li>*@
                            <li>
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    @User.Identity.Name
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Alteração de senha", "AlterarSenhaUsuario", "Conta")</li>
                                </ul>
                            </li>
                            <li><a href="javascript:document.getElementById('logoffForm').submit()">Sair</a></li>

                        </ul>
                    }
                }
                else
                {
                        <div class="row">
                            <div class="col-md-2">
                                <a href="/HotSite">
                                    <img src="~/Content/Logo/logo1.jpeg" alt="" style="height: 50px; width:auto; padding:5px;" />
                                </a>
                            </div>
                            <div class="col-md-4">
                                <ul class="nav navbar-nav navbar-left">
                                    <li>@Html.ActionLink("Sobre", "", "")</li>
                                    <li>@Html.ActionLink("Passeios", "", "")</li>
                                    <li>@Html.ActionLink("Contato", "", "")</li>
                                    @RenderSection("navClient", required: false)
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="nav navbar-nav navbar-right">                                   
                                    <li>@Html.ActionLink("Login", "Login", "Conta")</li>

                                </ul>
                            </div>
                        </div>
                        
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>

             
                @RenderSection("footer", required: false)
                <p id="footercred" style="color:white;text-align:center;">&copy; @DateTime.Now.Year - Controle de Estoque</p>
          
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/sweetalert2.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
